@using PictureGallery.Models.ManageAlbum
@model ChangeAlbumDescriptionVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ChangeAlbumDescription";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Change Album Description</h2>

<form asp-action="ChangeAlbumDescription" method="post">
    Album description: <input asp-for="Description" /><span asp-validation-for="Description" style="color:red"></span><br />
    <input asp-for="Id" type="hidden"/>
    <input type="submit" />
</form>

