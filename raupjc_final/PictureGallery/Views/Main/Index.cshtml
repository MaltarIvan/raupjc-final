@using PictureGallery.Models.Main;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hello @Model.UserProfile.UserName</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-4" style="padding:5px">
            <img src="data:image/png;base64, @Model.UserProfile.ProfilePicture.Data" width="100" height="100" style="margin:10px"/> <br/>
            <p style="font-size:24px; margin-top:10px">@Model.UserProfile.UserName</p>
            <div class="btn btn-primary">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span><a asp-controller="ManageProfile" asp-action="Index" style="color:white">Manage your pictures</a>
            </div>
        </div>    
    </div>
</div>
