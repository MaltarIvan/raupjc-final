@using PictureGallery.Models;
@using System.Web
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddUserProfileVM
@{
    ViewData["Title"] = "MakeNewProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MakeNewProfile</h2>

<form asp-action="MakeNewProfile" method="post" enctype="multipart/form-data">
    
    Profile Picture: <input asp-for="ProfilePictureUpload" type="file"/><span asp-validation-for="UserName" style="color:red"></span> <br />
    User Name: <input asp-for="UserName" /><span asp-validation-for="UserName" style="color:red"></span><br />
    <input type="submit" />
</form>