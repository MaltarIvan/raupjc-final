@using PictureGallery.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Web
@model AddUserProfileVM
@{
    ViewData["Title"] = "MakeNewProfile";
    Layout = "~/Pages/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/Main/makeNewProfile.css" asp-append-version="true" />
</head>

<h2 class="Make-title">Make New Profile</h2>
<hr />

<div class="row">

    <div class="col-sm-12">

        <form asp-action="MakeNewProfile" method="post" enctype="multipart/form-data">
            @if (ViewContext.ViewData.ModelState.IsValid == false)
            {
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        There were some input errors.
                    </div>
                    <div class="panel-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
            }
            <div class="Label-div">
                <label class="Input-label">Add Profile Picture </label> <br />
            </div>
            <div class="FileDiv">
                <label for="file-upload" class="custom-file-upload" >
                        <img src="~/Content/add.svg" style="margin-left:10px"/><br />
                        <input asp-for="ProfilePictureUpload" id="file-upload" type="file" onchange="ShowPreview(this)"/><span asp-validation-for="ProfilePictureUpload" style="color:red"></span> <br />
                </label>
            </div>
            <div class="Img-prev-div">
                <img id="imgPrev" src="~/Content/default-profile-picture.png" class="Img-prev" />
            </div>
            <div class="File-label-div">
                <label id="file-name" class="File-label">No file chosen.</label>
            </div>
            <div class="form-group InputDiv">
                <label>User name: </label>
                <input asp-for="UserName" class="Rectangle-input" />
                <span asp-validation-for="UserName" style="color:red"></span><br />
            </div>
            <div class="Button-div">
                <button type="submit" class="Rectangle-submit">Submit</button>
            </div>
        </form>

    </div>

</div>

@section Scripts {
    <script src="~/js/Main/makeNewProfile.js"></script>     
}