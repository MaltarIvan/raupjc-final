@using PictureGallery.Models.PictureDetails
@model ChangePictureDescriptionVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ChangeDescription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ChangeDescription</h2>

<form asp-action="ChangePictureDescription" method="post">
    Picture description: <input asp-for="Description" /><span asp-validation-for="Description" style="color:red"></span><br />
    <input asp-for="Id" type="hidden" />
    <input type="submit" />
</form>