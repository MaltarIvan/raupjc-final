@using PictureGallery.Models.PictureDetails
@model ChangePictureDescriptionVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ChangeDescription";
    Layout = "~/Pages/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/PictureDetails/changePictureDescription.css" asp-append-version="true" />
</head>

<div class="row">
    <div class="col-sm-12">
        <h2 class="change-title">Change Picture Description</h2>
        <form asp-action="ChangePictureDescription" method="post">
            <div class="form-group input-div">
                <label>Picture Description: </label>
                <input asp-for="Description" class="rectangle-input"/>
                <span asp-validation-for="Description" style="color:red"></span><br />
                <input asp-for="Id" type="hidden" />
            </div>
            <div class="button-div">
                <button type="submit" class="rectangle-submit">Submit</button>
            </div>
        </form>
        <a class="cancle-button" asp-action="Index" asp-route-id="@Model.Id">Cancle</a>
    </div>
</div>

