@using PictureGallery.Models.PictureDetails;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddNewCommentVM
@{
    ViewData["Title"] = "AddNewComment";
    Layout = "~/Pages/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/PictureDetails/addNewComment.css" asp-append-version="true" />
</head>

<div class="row">
    <div class="col-sm-12">
        <h2 class="add-new-title">Add New Comment</h2>
        <form asp-action="AddNewComment" method="post">
            <div class="form-group input-div">
                <label>Comment: </label>
                <input asp-for="Text" class="rectangle-input" id="comment-input"/>
                <span asp-validation-for="Text" style="color:red"></span> <br />
                <input asp-for="PictureId" type="hidden" />
            </div>
            <div class="button-div">
                <button type="submit" class="rectangle-submit">Submit</button>
            </div>
        </form>
        <a class="cancle-button" asp-action="Index" asp-route-id="@Model.PictureId">Cancel</a>
    </div>
</div>


