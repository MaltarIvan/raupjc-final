@using PictureGallery.Models.PictureDetails;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddNewCommentVM
@{
    ViewData["Title"] = "AddNewComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Comment</h2>

<form asp-action="AddNewComment" method="post">
    Comment: <input asp-for="Text" /><span asp-validation-for="Text" style="color:red"></span> <br />
    <input asp-for="PictureId" type="hidden" />
    <input type="submit" />
</form>
